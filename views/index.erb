<header>
<h1> Chitter </h1>
<% if !@username %>
<form action='/sign-up' method='get'>
  <input type='submit' value='Sign Up'>
</form>


<form action='/sign-in' method='get'>
  <input type='submit' value='Sign In'>
</form>
<% end %>

<% if @username %>
<form action='/sign-out' method='post'>
  <input type='submit' value='Sign Out'>
</form>
<% end %>

</header>

<h2> Hello <%= @username %>, something on your mind? </h2>
<form action='/new-peep' method='post'>
  <input type='text' name='peep' placeholder='you were always on my mind'>
  <input type='submit' value='Tell The World'>
</form>
<h2> Peeps </h2>
<ul>
  <% @peeps.each do |each_peep| %>
  <li>
    <h3><%= each_peep.peep %></h3>
    <a><%= each_peep.time %></a>
    <a><%= each_peep.username %></a>
  </li>
  <% end %>
</ul>
